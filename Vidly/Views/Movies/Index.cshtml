@model IEnumerable<Vidly.Models.Movie>

@{
    ViewBag.Title = "Index";
}

<h2>Movies</h2>

@if(!Model.Any())
{

    <p>Sorry, no movies available yet</p>
}
else { 
    <table class="table table-bordered table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>


    @foreach (var movie in Model) {
        <tr>
            <td>
                
                @movie.Name
            </td>

        </tr>
    }

    </table>

}